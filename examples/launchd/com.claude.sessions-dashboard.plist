<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.claude.sessions-dashboard</string>

    <key>ProgramArguments</key>
    <array>
        <!-- IMPORTANT: use your actual python3 path (run `which python3` to find it) -->
        <string>/usr/local/bin/python3</string>
        <string>/Users/YOUR_USERNAME/.claude/dashboard/manage.py</string>
        <string>serve</string>
        <string>--port</string>
        <string>9000</string>
        <string>--host</string>
        <string>127.0.0.1</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/YOUR_USERNAME/.claude/dashboard</string>

    <!-- Start when user logs in -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Restart if it crashes -->
    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/YOUR_USERNAME/.claude/dashboard/logs/dashboard.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/YOUR_USERNAME/.claude/dashboard/logs/dashboard.err</string>

    <!-- Wait at least 10s between restarts -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
